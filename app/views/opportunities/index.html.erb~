<table>
  <tr>
    <th>Account name</th>
    <th>Opp type</th>
    <th>Name</th>
    <th>Amount</th>
    <th>Sales Stage</th>
  </tr>

<% for opportunity in @opportunities %>
  <tr>
    <td><%=h opportunity.acct_name %></td>
    <td><%=h opportunity.opportunity_type %></td>
    <td><%=h opportunity.name %></td>
    <td><%=h opportunity.amount %></td>
    <td><%=h opportunity.sales_stage %></td>
    <td><%= link_to 'Show', opportunity %></td>
    <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
    <td><%= link_to 'Destroy', opportunity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

