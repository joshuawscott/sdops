#general.boxed{:style => 'width:480px;height:310px'}
  %h2 General Details
  %p
    %label{:for => "contract_id"}
      Contract ID
    =h @contract.id.to_s
  %p
    %label{:for => "contract_account_name"}
      -if @contract.sugar_acct.partner?
        Partner
      -else
        Account
    = @contract.account_name.blank? ? 'N/A' :  link_to(@contract.account_name, contract_search_url(:account_name => @contract.account_name), :title => "View all contracts for #{@contract.account_name}")
  -if @contract.sugar_acct.partner?
    %p
      %label{:for => "end_user"}
        End User
    = @contract.end_user.nil? ? 'N/A' : @contract.end_user.name
  %p
    %label{:for => "contract_account_client_category"}
      Client Category
    =h @contract.sugar_acct.client_category.blank? ? 'N/A' : @contract.sugar_acct.client_category
  %p.top
    %label{:for => "contract_sales_office_name"}
      Sales Office
    =h @contract.sales_office_name.blank? ? 'N/A' : @contract.sales_office_name
  %p
    %label{:for => "contract_support_office_name"}
      Support Office
    =h @contract.support_office_name.blank? ? 'N/A' : @contract.support_office_name
  %p
    %label{:for => "contract_sales_rep_id"}
      Sales rep
    = h @contract.sales_rep_id.blank? ? 'N/A' : @sales_rep
  %p
    %label{:for => "contract_primary_ce_id"}
      Primary CE
    = h @contract.primary_ce.blank? ? 'N/A' : @contract.primary_ce.full_name
  %p.top
    %label{:for => "contract_said"}
      SAID
    =h @contract.said ||= 'N/A'
  %p
    %label{:for => "contract_sdc_ref"}
      SDC Reference
    =h @contract.sdc_ref ||= 'N/A'
  %p
    %label{:for => "contract_description"}
      Description
    %span{:title => @contract.description.to_s.length > 45 ? @contract.description : ""}
      =h @contract.description.blank? ? 'N/A' : truncate(@contract.description, 45, "....")
  %p
    %label{:for => "contract_platform"}
      Platform
    =h @contract.platform.blank? ? 'N/A' : @contract.platform
  %p.top
    %label{:for => "contract_renewal_created"}
      Renewal Created
    =h @contract.renewal_created.blank? ? 'N/A' : @contract.renewal_created
  %p
    %label{:for => "contract_renewal_sent"}
      Renewal Sent
    =h @contract.renewal_sent.blank? ? 'N/A' : @contract.renewal_sent
  %p
    %label{:for => "contract_renewal_sent"}
      Renewal Amount
    =h @contract.renewal_amount.nil? ? 'N/A' : @contract.renewal_amount
  %p.top
    %label{:for => "contract_site_survey_date"}
      Last Site Survey
    =h @contract.site_survey_date.nil? ? 'N/A' : @contract.site_survey_date