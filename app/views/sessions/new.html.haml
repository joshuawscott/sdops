- content_for :subtitle do
  Login

#section1
  %h2 Warning: The data contained in this website is highly confidential Source Direct information.
  = error_messages_for :session
  - form_tag sessions_path do
    %p
      %label{:for => "login"}
        Login
      = text_field_tag 'login'

    %p
      %label{:for => "password"}
        Password
      = password_field_tag 'password'

    %p
      = submit_tag 'Log in'

    %p
      = flash[:error]

    = set_focus_to_id 'login'