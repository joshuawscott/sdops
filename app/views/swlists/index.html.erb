<% content_for :subtitle do %>
  Tools - SWList
<% end %>
<% form_tag '/swlists/show', :multipart => true do %>
  <p>
    <label for="server_name">
    Server Model
    </label>
    <%= select_tag 'server_id', options_from_collection_for_select(@server_names, 'id', 'model_name') %>
  </p>
  <p>
    <label for="server_cores">
    Active Cores
    </label>
    <%= text_field_tag 'server_cores' %>
  </p>
  <p>
    <label for="hpux_version">
    HP-UX Version
    </label>
    <%= select_tag 'hpux_version', options_for_select(['10.20','11.00','11.11','11.23','11.31']) %>
  </p>
  <p>
    <label for="swlist_file">
    Upload swlist
    </label>
    <%= file_field_tag("swlist_file") %>
  </p>
  <p>
    <%= submit_tag 'import file' %>
  </p>
<% end %>

