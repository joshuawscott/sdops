- content_for :subtitle do
  Servers
#section1
  %h2 Server Listing
#section2
  %table
    %tr
      %th Model name
      %th Server line
      %th Tier
      %th Sockets
      %th{:style => "valign='center'", :colspan => "3"}
        Options
    - @servers.each do |server|
      %tr
        %td
          =h server.model_name
        %td
          =h server.server_line
        %td
          =h server.tier
        %td
          =h server.sockets
        %td
          = link_to 'Show', server
        -if current_user.has_role?('config_tool_admin')
          %td
            = link_to_if current_user.has_role?('config_tool_admin'), 'Edit', edit_server_path(server)
          %td
            = link_to_if current_user.has_role?('config_tool_admin'), 'Destroy', server, :confirm => 'Are you sure?', :method => :delete
  %br
  = link_to('New server', new_server_path) if current_user.has_role?('config_tool_admin')
