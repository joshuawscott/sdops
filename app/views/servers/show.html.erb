<h2>Server Information</h2>
<p>
  <b>Model name:</b>
  <%=h @server.model_name %>
</p>

<p>
  <b>Server line:</b>
  <%=h @server.server_line %>
</p>

<p>
  <b>Tier:</b>
  <%=h @server.tier %>
</p>

<p>
  <b>Sockets:</b>
  <%=h @server.sockets %>
</p>

<p><h2>IO Slots</h2>
<table>
  <tr>
    <th>Slot</th>
    <th>Path</th>
    <th>Description</th>
    <th colspan='2'>Options</th>
  </tr>
<% for io_slot in @server.io_slots %>
  <tr>
    <td><%=h io_slot.slot_number %></td>
    <td><%=h io_slot.path %></td>
    <td><%=h io_slot.description %></td>
    <td><%= link_to 'Edit', edit_server_io_slot_path(@server, io_slot) %></td>
    <td><%= link_to 'Destroy', server_io_slot_path(@server, io_slot), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  <tr>
    <td><%= link_to 'Add Slot', new_server_io_slot_path(@server) %></td>
    
  </tr>
</table>
</p>

<%= link_to 'Edit', edit_server_path(@server) %> |
<%= link_to 'Back', servers_path %>
