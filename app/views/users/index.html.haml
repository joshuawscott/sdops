- content_for :subtitle do
  User List
  
#section1
  %table{:border => "2", :cellpadding => "2", :cellspacing => "2"}
    %tr
      %th Login
      %th Name
      %th Role
      %th Office
      %th{:colspan => "3"} &nbsp;
    
    - for user in @users
      %tr
        %td= h user.login
        %td= h user.first_name
        %td= h @roles_labels[user.role]
        %td= h user.office
        %td= link_to ' Edit ', edit_user_path(user)
        %td= link_to ' Destroy ', user_path(user), :confirm => 'Are you sure?', :method => :delete


#section2
  = link_to 'New user', new_user_path
