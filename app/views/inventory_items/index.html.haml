- content_for :subtitle do
  Inventory

#section1
  %p &nbsp;
  = #render :partial => "maineditor/main"
#section2
  = link_to 'New Inventory Item', new_inventory_item_path if current_user.role == ADMIN
  | 
  = link_to 'Clear Search', inventory_items_path
  - form_tag inventory_items_path, { :method => :get } do
    %div{:align => 'right', :style => 'width:980px'}
      = submit_tag "Search"
  
    %table{:class => "sortable", :border => "2", :cellpadding => "2", :cellspacing => "2"}
      %thead
        %tr
          %th{:width => '80px'}
            Tracking
          %th{:width => '80px'}
            Item Code
          %th{:width => '149px'}
            Description
          %th{:width => '90px'}
            Serial Number
          %th{:width => '100px'}
            Warehouse
          %th{:width => '150px'}
            Location
        %tr
          %th{:class => "search"}
            = text_field 'search', 'tracking', :size => 19, :value => @tracking
          %th{:class => "search"}
            = text_field 'search', 'item_code', :size => 19, :value => @item_code
          %th{:class => "search"}
            = text_field 'search', 'description', :size => 16, :value => @description
          %th{:class => "search"}
            = text_field 'search', 'serial_number', :size => 11, :value => @serial_number
          %th{:class => "search"}
            = select("search", "warehouse", @warehouses, {:selected => @warehouse, :include_blank => true },{:style => "width: 82px"})
          %th{:class => "search"}
            = select("search", "location", @locations, {:selected => @location, :include_blank => true },{:style => "width: 82px"})
      - for inventory_item in @inventory_items
        %tr 
          %td= h inventory_item.tracking
          %td= h inventory_item.item_code
          %td= h inventory_item.description
          %td= h inventory_item.serial_number
          %td= h inventory_item.warehouse
          %td= h inventory_item.location

