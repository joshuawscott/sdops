!!! Transitional

%html{ "xmlns"=>"http://www.w3.org/1999/xhtml", "xml:lang"=>"en", "lang"=>"en" }
  %head
    %meta{ 'http-equiv'=>"content-type", 'content'=>"text/html;charset=UTF-8"}/
    %title
      = 'SD Ops:' + controller.controller_name.camelcase + ':' + controller.action_name.camelcase
    = stylesheet_link_tag 'main'
    = javascript_include_tag "application.js"
    = javascript_include_tag "prototype.js"
    = javascript_include_tag "lowpro.js"
    = javascript_include_tag "sorttable.js"

  %body
    #header
      = image_tag("sodi-logo-tag.jpg", :id => "logo", :width => "182", :height => "60", :border => "0")
      
      #title
        %h1
          -  @subtitle = yield :subtitle
          = 'SD Ops - ' + @subtitle
      
      =render :partial => "layouts/menu"
            


    #content
      - if flash[:error]
        %p{ :style => "color: red"}
          = flash[:error]
      - if flash[:notice]
        %p{ :style => "color: green"}
          = flash[:notice]

      = yield
    

