!!! Transitional

%html{ "xmlns"=>"http://www.w3.org/1999/xhtml", "xml:lang"=>"en", "lang"=>"en" }
  %head
    %meta{ 'http-equiv'=>"content-type", 'content'=>"text/html;charset=UTF-8"}/
    %title
      = 'SD Ops:' + controller.controller_name.camelcase + ':' + controller.action_name.camelcase
    = stylesheet_link_tag 'main'

  %body
    #header
      = image_tag("sodi-logo-tag.jpg", :id => "logo", :width => "242", :height => "80", :border => "0")
      
      #title
        %h1
          -  @subtitle = yield :subtitle
          = 'SD Ops - ' + @subtitle
      
      #header_mini_graph
        - @url1 = url_for :controller => 'graphs', :action => 'sales_by_office_mini_bar'
        %img{'src' => @url1, 'style' => "border:0px solid #111111;"}

      #menu
        %ul
          %li
            = link_to 'Contracts', contracts_path, :class => 'active'
          %li
            = link_to 'Reports', reports_path
          - if current_user.role == ADMIN
            %li
              = link_to 'Admin', admin_path
          - if logged_in?
            %li
              = link_to 'Logout', "/logout"
          - else
            %li
              = link_to 'Login', "/login"
            
        #userinfo
          - if current_user != :false
            %p
              = h current_user.first_name + ' ' + current_user.last_name
              = h " - " + Dropdown.find(current_user.role).label
        
        %hr/


    #content
    - if flash[:notice]
      %p{ :style => "color: green"}
        = flash[:notice]

    = yield
    

