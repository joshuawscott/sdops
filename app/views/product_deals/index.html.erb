<% content_for :subtitle do%>
     Product Deal
<%end%>
<h1>Listing product_deals</h1>

<table>
  <tr>
    <th>Job number</th>
    <th>Opportunity</th>
    <th>Account</th>
    <th>Account name</th>
    <th>Invoice number</th>
    <th>Revenue</th>
    <th>Cogs</th>
    <th>Freight</th>
    <th>Status</th>
    <th>Modified by</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

<% for product_deal in @product_deals %>
  <tr>
    <td><%=h product_deal.job_number %></td>
    <td><%=h product_deal.opportunity_id %></td>
    <td><%=h product_deal.account_id %></td>
    <td><%=h product_deal.account_name %></td>
    <td><%=h product_deal.invoice_number %></td>
    <td><%=h product_deal.revenue %></td>
    <td><%=h product_deal.cogs %></td>
    <td><%=h product_deal.freight %></td>
    <td><%=h product_deal.status %></td>
    <td><%=h product_deal.modified_by %></td>
    <td><%=h product_deal.created_at %></td>
    <td><%=h product_deal.updated_at %></td>
    <td><%= link_to 'Show', product_deal %></td>
    <td><%= link_to 'Edit', edit_product_deal_path(product_deal) %></td>
    <td><%= link_to 'Destroy', product_deal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

