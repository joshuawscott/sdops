- content_for :subtitle do
  I/O Slots
= render_partial '/tools/tools_header'
#section2
  %h1
    New I/O Slot for 
    = @server.model_name
#section2
  - form_for(:io_slot, :url => server_io_slots_path(@server.id)) do |f|
    = render :partial => "form", :locals => { :f => f } 
  %p
    = submit_tag "Create"
  = link_to 'Back', server_path(@server)
#section3
  %h2
    Current I/O slots in
    =h @server.model_name
  %table
    %tr
      %th Slot number
      %th Path
      %th Description
    - for io_slot in @server.io_slots
      %tr
        %td
          =h io_slot.slot_number
        %td
          =h io_slot.path
        %td
          =h io_slot.description
