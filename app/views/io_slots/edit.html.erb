<h1>Editing I/O Slot for <%= @server.model_name %></h1>

<% form_for(:io_slot, :url => server_io_slot_path(@server.id, @io_slot.id), :html => { :method => :put } ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :slot_number %><br />
    <%= f.text_field :slot_number %>
  </p>
  <p>
    <%= f.label :path %><br />
    <%= f.text_field :path %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', server_path(@server) %>
