<h1>New io_slot for <%= @server.model_name %></h1>

<% form_for(:io_slot, :url => server_io_slots_path(@server.id)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :slot_number %><br />
    <%= f.text_field :slot_number %>
  </p>
  <p>
    <%= f.label :path %><br />
    <%= f.text_field :path %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', server_path(@server) %>
<h2>Existing slots</h2>
<table>
  <tr>
    <th>Slot</th>
    <th>Path</th>
    <th>Description</th>
  </tr>
<% for io_slot in @server.io_slots %>
  <tr>
    <td><%=h io_slot.slot_number %></td>
    <td><%=h io_slot.path %></td>
    <td><%=h io_slot.description %></td>
  </tr>
<% end %>
</table>
