- content_for :subtitle do
  Reports
  
%ul{:class => 'sub_menu'}
  %li
    = link_to 'Dashboard', reports_path
  %li
    = link_to 'Renewals', {:controller => "reports", :action => "renewals"}
  %li
    = link_to 'Inventory', {:controller => "reports", :action => "sparesreq"}, :class => 'active'

%p &nbsp;
#section1
  %table{:class => 'plain_table'}
    %tr
      %td{:width => '300px'}
        %h2{:margin => '0'}
          Spares Requirements &nbsp;&nbsp;&nbsp;
          %span{:style => 'font-size:8pt;text-transform:lowercase'}= link_to_function 'Format for print', "toggleHeaderStuff()"
      %td
        %b Filter by Office&nbsp;
      %td
        - form_tag'/reports/sparesreq', {:name => 'search' }  do |f|
          = select("filter", "offices", @offices, {:include_blank => true}, {:onchange => "document.getElementById('filter_office_name').value = this.options[this.selectedIndex].text" })
          = hidden_field "filter", "office_name"
          = submit_tag "Search"

  %h2{:style => 'margin:15px 0px 0px 200px'}
    Products Under Support - 
    = @office

  %table{:class => "sortable", :padding => '2', :border => '1'}
    %thead
      %tr
        %th{:width => '120px'}
          %b Product Number
        %th{:width => '380px'}
          %b Description
        %th{:width => '60px'}
          %b Count
    %tbody
      - for x in @lineitems
        %tr
          %td= h x.product_num
          %td= h x.description
          %td{:align => 'right'}= h x.count
          
